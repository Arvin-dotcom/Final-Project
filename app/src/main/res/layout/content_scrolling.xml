<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DisplayHotelActivity"
    tools:showIn="@layout/activity_display_hotel">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:padding="24dp"
       android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Rates per night PHP:"/>
       <TextView
           android:id="@+id/text_rates"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingVertical="8dp"
           android:textSize="42sp"
           android:fontFamily="sans-serif-light"
           android:text="â‚± 400"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date arrival(MM/DD/YYYY):"/>
       <EditText
           android:id="@+id/arrival_date_txt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:ems="10"
           android:inputType="date" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Date departure(MM/DD/YYYY):"/>
       <EditText
           android:id="@+id/departure_date_txt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:ems="10"
           android:inputType="date" />

       <Button
           android:id="@+id/btn_book"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Book now" />
       <Button
           android:id="@+id/btn_add_wish"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Add to wish list" />
   </LinearLayout>
</androidx.core.widget.NestedScrollView>